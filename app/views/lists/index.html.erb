<div class="container-fluid">
  <div class="d-flex justify-content-center">
    <h1>All lists</h1>
  </div>
  <div class="d-flex justify-content-center">
    <button class="btn btn-blue">Create a new List</button>
  </div>
</div>
<div class="d-flex justify-content-center">
  <% @lists.each do |list| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="http://source.unsplash.com/featured/?<%= list.name %>+movie&<%= rand(1000) %>)" alt="Card image cap">
      <div class="card-body">
        <p class="card-text"> <%= list.name %></p>
      </div>
    </div>
  <% end %>
</div>
